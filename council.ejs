<!DOCTYPE html>
<html>
<head>
<style>


#customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 1000px;
  margin : auto;
}


#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #ddd;}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
p
{
    color:red;
    text-align:center;
}

</style>
</head>
<body>

<table id="customers">
   <tr>
     <th>Conncil Name</th>
     <th>Office Number</th>
     <th>Telephone</th>
     <th>Campus</th>
     <th>Email</th>
   </tr>
   
   <% if (council !== 0) { %>
      <% council.forEach( council => { %>
      <tr>
        <td> <%= council.CouncilName %>  </td>
        <td> <%= council.OfficeNo %>  </td>
        <td> <%= council.Campus %>  </td>
        <td> <%= council.FoundationDate %>  </td>
        <td> <%= council.Email %>  </td>
      </tr>
      <% }) %>
    </table>
    <% } else { %>
    </table>
    <p> There is no council in the university at the moment </p>
   
    <%  } %>
 
</table>

</body>
</html>


